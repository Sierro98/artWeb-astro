---
import { Image } from "astro:assets";
import { type ImageMetadata } from "astro";

interface Props {
  imgDescription: string;
  imgHeight: number;
  imgWidth: number;
}

const { imgDescription, imgHeight, imgWidth } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/works/*.{jpeg,jpg,png}");

---

<div class="p-5 md:p-10">
  <div
    class="columns-1 sm:columns-2 lg:columns-3 gap-5 lg:gap-8 [&>img:not(:first-child)]:mt-5 lg:[&>img:not(:first-child)]:mt-8"
  >
    {
      Object.keys(images).map((imagePath) => (
        <Image
          format="avif"
          quality={"low"}
          src={images[imagePath]()}
          alt={imgDescription}
        />
      ))
    }
  </div>
</div>
