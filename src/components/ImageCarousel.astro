---
type Props = {
    destination:string;
}

const {destination} = Astro.props;
---

<a href={destination} class="scroll">
    <div class="m-scroll">
        <span><img decoding="async" src="../../public/images/MainCarousel/Andrew Kliatskyi 3D Render.jpg" alt="QBX"></span>
        <span><img decoding="async" src="../../public/images/MainCarousel/Javier Miranda.jpg" alt="QBX"></span>
        <span><img decoding="async" src="../../public/images/MainCarousel/Luke Jones 3D Render.jpg" alt="FARAL"></span>
        <span><img decoding="async" src="../../public/images/MainCarousel/Marco Damm 3D Render.jpg" alt="ADEME"></span>
        <span><img decoding="async" src="../../public/images/MainCarousel/Rick Rothenberg 3D Renders.jpg" alt="CNRS"></span>
    </div>
</a>

<style>
	.scroll {
    position: relative;
    width: 100%;
    height: 250px;
    background-color: transparent;
    overflow: hidden;
    z-index: 1;
    
}

.scroll img {
    height: 250px;
    min-width: 400px;
	object-fit: cover;
}

.m-scroll {
    overflow: hidden;
    white-space: nowrap;
    animation: scrollText 35s infinite linear;
    margin: 0;
    font-size: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: fit-content;
    height: 250px;
}

span {
    display: inline-block;
    width: fit-content;
    margin: 0 20px;
    padding: 0;
    color: white;
}

@keyframes scrollText {
    from {
        transform: translateX(45%);
    }
    to {
        transform: translateX(-99%);
    }
}

</style>