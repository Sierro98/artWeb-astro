---
import { Image } from 'astro:assets';

type Props = {
    destination:string;
}

const {destination} = Astro.props;
const imgDescription: string = "JavatoGarabato Art"
const imgWidth = 400;
const imgHeight = 300;
---
<div class="pb-12">
    <a href={destination} class="scroll">
        <div class="scroll-slide">
            <Image loading={"eager"} src="/images/MainCarousel/Andrew Kliatskyi 3D Render.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Javier Miranda.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Luke Jones 3D Render.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Marco Damm 3D Render.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Rick Rothenberg 3D Renders.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
        </div>
        <div class="scroll-slide">
            <Image loading={"eager"} src="/images/MainCarousel/Andrew Kliatskyi 3D Render.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Javier Miranda.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Luke Jones 3D Render.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Marco Damm 3D Render.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
            <Image loading={"eager"} src="/images/MainCarousel/Rick Rothenberg 3D Renders.jpg" alt={imgDescription} width={imgWidth} height={imgHeight}/>
        </div>
    </a>
</div>

<style>
.scroll {
    display: block;
    position: relative;
    width: 100%;
    height: 300px;
    background-color: transparent;
    overflow: hidden !important;
    white-space: nowrap;
    z-index: 1;
}
.scroll-slide {
    animation: scrollText 30s infinite linear;
    display: inline-block;
    justify-content: space-between;
    align-items: center;
    position: relative;
    white-space: nowrap;
}
.scroll img {
    height: 300px;
    min-width: 400px;
	object-fit: cover;
    display: inline-block;
    margin: 0 20px;
    color: white;
}
@keyframes scrollText {
    from {
        transform: translateX(-100%);
    }
    to {
        transform: translateX(0%);
    }
}

</style>