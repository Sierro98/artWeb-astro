---
import {Image} from "astro:assets"

const userEmail = Astro.cookies.get("userEmail")
---

<header
    class="flex flex-col py-8 px-16 max-sm:px-5 max-sm:py-10 justify-self-center w-full"
>   
    <div class="flex justify-between items-center">
        <div class="flex items-end">
            <h1 class="text-3xl sm:text-5xl">JavatoGarabato</h1>
            <p class="px-3 text-xs">Artista desde 1998</p>
        </div>
        
        <a href="/" class="flex gap-x-4 items-center">
            <Image
                src="/heartbeat.png"
                alt="rhythm nation logo"
                width={64}
                height={64}
                format="webp"
                class="w-16"
            />
        </a>
    </div>

    <hr class="flex-grow border-gray-800"></hr>

    <div class="flex justify-between items-center py-3 text-base sm:text-2xl font-semibold px-2">
        <p>Obras</p>
        <p>Blog</p>
        <p>Productos</p>
        <p>Contacto</p>
    </div>

    <hr class="flex-grow border-gray-800"></hr>
    
</header>

<style>
    h1 {
        font-family: 'Azeret Mono Variable', monospace;
        font-weight: bolder;
    }
    p {
        font-family: 'Azeret Mono Variable', monospace;
    }
</style>