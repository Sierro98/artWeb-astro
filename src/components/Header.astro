---
import {Image} from "astro:assets"

const userEmail = Astro.cookies.get("userEmail")
---

<header
    class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl justify-self-center w-full"
>   
    <div class="flex items-end">
        <h1 class="text-4xl Bold-700">JavatoGarabato</h1>
        <p class="px-3 text-xs">Artista desde 1998</p>
    </div>
    
    <a href="/" class="flex gap-x-4 items-center">
        <Image
            src="/heartbeat.png"
            alt="rhythm nation logo"
            width={64}
            height={64}
            format="webp"
            class="w-16"
        />
    </a>
</header>

<style>
    h1, p {
        font-family: 'Azeret Mono Variable', monospace;
    }
</style>