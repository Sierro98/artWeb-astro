---
import { changeLanguage } from "i18next";
import Layout from "../../layouts/Layout.astro";
import Main from "../../components/Main.astro";
import LittleDescription from "../../components/Little-description.astro";
import ImageCarousel from "../../components/ImageCarousel.astro";
import OrderCarousel from "../../components/OrderCarousel.astro";
import PublicationsBanner from "../../components/PublicationsBanner.astro";
import LineBreak from "../../components/Line-Break.astro";

changeLanguage("en");

const description: string = "JavatoGarabato, nacido en Madrid, siempre ha estado interesado por mostrar mediante sus obras una visi\u00F3n del mundo diferente e inconformista.";
---

<Layout>
	<Main>
		<LittleDescription description={description}/>
		<ImageCarousel destination='/project-mz'/>
		<LineBreak/>
		<OrderCarousel destination='project-mz'/>
		<PublicationsBanner destination='/project-mz' message='PUBLICATIONS'/>
		<LineBreak/>
	</Main>
</Layout>